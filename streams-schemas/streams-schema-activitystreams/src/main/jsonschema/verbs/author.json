    "id":"#",
    "type": "object",
    "title": "Author",
    "description": "Indicates that the actor has authored the object. Note that this is a more specific form of the verb \"create\".",
    "extends": {
        "$ref": "../activity.json"
    },
    "properties": {
        "verb": {
            "type": "string",
            "default": "author"
        },
        "title": {
            "type": "string",
            "default": "{actor.displayName} authored {object.displayName}"
        }
    }
}
