{
  "$schema": "http://json-schema.org/draft-03/schema",
  "$license": [
    "http://www.apache.org/licenses/LICENSE-2.0"
  ],
  "id": "#",
  "type": "object",
  "javaType" : "org.apache.streams.riak.pojo.RiakConfiguration",
  "javaInterfaces": ["java.io.Serializable"],
  "properties": {
    "scheme": {
      "type": "string"
    },
    "hosts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "port": {
      "type": "integer"
    },
    "defaultBucket": {
      "type": "string",
      "default": "streams"
    },
    "defaultBucketType": {
      "type": "string",
      "default": "default"
    },
    "defaultCharset": {
      "type": "string",
      "default": "UTF-8"
    },
    "defaultContentType": {
      "type": "string",
      "default": "application/json"
    }
  }
}
