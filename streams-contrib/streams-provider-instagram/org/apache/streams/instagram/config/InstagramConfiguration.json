{
    "$schema": "http://json-schema.org/draft-03/schema",
    "$license": [
        "http://www.apache.org/licenses/LICENSE-2.0"
    ],
    "id": "#",
    "type": "object",
    "javaType" : "org.apache.streams.instagram.config.InstagramConfiguration",
    "javaInterfaces": ["java.io.Serializable"],
    "properties": {
        "protocol": {
            "type": "string",
            "description": "The protocol"
        },
        "host": {
            "type": "string",
            "description": "The host"
        },
        "port": {
            "type": "integer",
            "description": "The port"
        },
        "version": {
            "type": "string",
            "description": "The version"
        },
        "oauth": {
            "type": "object",
            "dynamic": "true",
            "javaType" : "org.apache.streams.instagram.config.InstagramOAuthConfiguration",
            "javaInterfaces": ["java.io.Serializable"],
            "properties": {
                "clientId": {
                    "type": "string"
                },
                "clientSecret": {
                    "type": "string"
                },
                "accessToken": {
                    "type": "string"
                }
            }
        },
        "threadsPerProvider": {
            "type": "integer",
            "description": "number of threads per provider"
        },
        "retrySleepMs": {
            "type": "integer",
            "description": "ms to sleep when hitting a rate limit"
        },
        "retryMax": {
            "type": "integer",
            "description": "max times to retry"
        }
   }
}