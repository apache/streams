    "id": "#",
    "type": "object",
    "title": "Tag",
    "description": "To tag an object. Ex: A person being tagged in a photo",
    "extends": {
        "$ref": "../activity.json"
    },
    "properties": {
        "verb": {
            "type": "string",
            "default": "tag"
        },
